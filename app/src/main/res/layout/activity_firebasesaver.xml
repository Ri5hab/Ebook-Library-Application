<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout1"
    android:background="#CA2196F3"
    tools:context=".Firebasesaver">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="PUBLISH OWN EBOOK"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="#13010A"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="(make money after some time)"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#13010A"
        android:textSize="9dp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="200dp"
            android:layout_width="150dp"
            android:id="@+id/img1"
            android:scaleType="fitXY"
            android:background="#B9B2C3"
            android:layout_marginLeft="24dp"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:background="#B9B2C3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Brouse img"

            android:id="@+id/b1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:id="@+id/b2"
            android:text="Brouse pdf" />
    </LinearLayout>

    <TextView
        android:id="@+id/tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pdf Selected" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Ebook Name"
        android:maxLines="2"
        android:maxLength="52"/>

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numeric="integer"
        android:hint="Edition"
        android:maxLines="1"
        android:maxLength="4"
        />

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numeric="integer"
        android:hint="Pages"
        android:maxLines="1"
        android:maxLength="4"/>

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Publish By"
        android:maxLines="1"
        android:maxLength="25"/>


    <Button
        android:onClick="click"
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PUBLISH"
        />





</androidx.appcompat.widget.LinearLayoutCompat>